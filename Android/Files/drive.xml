<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/race"
	android:orientation="vertical" >

	<Button
		android:id="@+id/bGas"
		android:layout_width="116dp"
		android:layout_height="92dp"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:background="@drawable/pedal_effect"
		android:contentDescription="acc" />

	<Button
		android:id="@+id/bBrakes"
		android:layout_width="116dp"
		android:layout_height="84dp"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:background="@drawable/brake_effect"
		android:contentDescription="brake" />

	<Button
		android:id="@+id/maps"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:layout_marginRight="22dp"
		android:layout_marginTop="18dp"
		android:background="@drawable/song_effect" />

	<Button
		android:id="@+id/left"
		android:layout_width="95dp"
		android:layout_height="50dp"
		android:layout_alignParentBottom="true"
		android:layout_marginLeft="70dp"
		android:layout_toRightOf="@+id/bBrakes"
		android:background="@drawable/left_effect" />

	<TextView
		android:id="@+id/tV"
		android:layout_width="250dp"
		android:layout_height="29dp"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="27dp"
		android:layout_toRightOf="@+id/bBrakes"
		android:text="TextView" />

	<Button
		android:id="@+id/right"
		android:layout_width="95dp"
		android:layout_height="50dp"
		android:layout_alignParentBottom="true"
		android:layout_marginLeft="32dp"
		android:layout_toRightOf="@+id/left"
		android:background="@drawable/right_effect" />

	<Button
		android:id="@+id/dipper"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/bGas"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="17dp"
		android:background="@drawable/dipper_effect"
		android:contentDescription="dipp" />

	<Button
		android:id="@+id/gear"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:layout_alignBottom="@+id/dipper"
		android:layout_alignRight="@+id/maps"
		android:background="@drawable/gear_effect" />

</RelativeLayout>